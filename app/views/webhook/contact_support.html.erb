<%= turbo_frame_tag "modal" do %>
  <div 
    class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center z-50" 
    data-controller="modal" 
    data-modal-target="overlay"
    data-action="click->modal#closeBg"
  >
    <!-- Modal Content -->
    <div class="bg-slate-800 rounded-lg p-6 w-96 shadow-lg text-white text-center space-y-3">
      <span class="text-base font-bold mb-4">Need Help?</span>
      <p class="text-white/70 mb-6 text-sm">
        For any questions related to Tonix. service work and cooperation, write to us.
      </p>
      <div class="flex flex-col justify-center space-y-3">
        <%= link_to SiteParameter.fetch('support_tg'), class: "px-4 py-2 flex items-center justify-center space-x-2 bg-amber-400 text-black font-semibold rounded hover:bg-blue-700", data: { action: "click->modal#close" } do %>
          <i class="fa-brands fa-telegram text-xl"></i>
          <span>Contact via Telegram</span>
        <% end %>
        <button class="px-4 py-2 block bg-black/20 text-white/70 rounded hover:bg-gray-300 font-semibold" data-action="click->modal#close">Back</button>
      </div>
    </div>
  </div>
<% end %>

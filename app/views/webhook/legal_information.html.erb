<%= turbo_frame_tag "modal" do %>
  <div 
    class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center z-50" 
    data-controller="modal" 
    data-modal-target="overlay"
    data-action="click->modal#closeBg"
  >
    <!-- Modal Content -->
    <div class="bg-slate-800 rounded-lg p-6 w-96 shadow-lg text-white text-center space-y-3">
      <div class="flex space-x-2 items-center">
        <i class="fa-solid fa-scale-balanced"></i>
        <span class="text-base font-bold block">Legal Information</span>
      </div>
      <% [
        { title: "Terms and Conditions", url: terms_path },
        { title: "Privacy Policy", url: "#" },
        { title: "KYC Policy", url: "#" },
        { title: "Acceptable Use Policy", url: "#" },
        { title: "GDPR Compliance Statement", url: "#" }
      ].each do |desc| 
      %>
      <%= link_to desc[:title], desc[:url], class: "block px-4 py-3 w-full text-start text-white/80 bg-black/20 rounded-xl hover:bg-gray-300" %>
      <% end %>
      <div class="flex flex-col justify-center space-y-3">
        <button class="px-4 py-2 block bg-black/20 text-white/70 rounded hover:bg-gray-300 font-semibold" data-action="click->modal#close">Back</button>
      </div>
    </div>
  </div>
<% end %>

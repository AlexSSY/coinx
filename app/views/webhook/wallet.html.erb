<div class="space-y-3 w-full">

  <!-- Top Balances -->
  <div class="w-full space-y-2 px-4 py-4">

    <!-- Balance 1 -->
    <div class="flex items-center justify-between bg-black/30 rounded-xl p-3">
      <div class="flex items-center space-x-2">
        <!-- Icon -->
        <!--div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
          <span class="text-lg font-bold">V</span>
        </div-->
        <img src="/toncoin-ton-logo.svg" alt="ton-icon" class="w-10 h-10">
        <!-- Balance Text -->
        <div>
          <p class="text-sm text-slate-300">Balance</p>
          <p class="text-sm font-bold text-slate-200"><%= current_user.ton %> TON</p>
        </div>
      </div>
      <div>
        <%= link_to withdraw_path, class: "py-3 px-4 bg-amber-300/50 rounded-xl flex items-center justify-center", data: { turbo_frame: "modal" } do %>
          <!--span class="text-gray-300 text-xl">ðŸ”’</span-->
          <i class="text-lg fa-solid fa-wallet text-slate-200"></i>
        <% end %>
      </div>
    </div>

    <!-- Balance 2 -->
    <div class="flex items-center justify-between bg-black/30 rounded-lg p-3">
      <div class="flex items-center space-x-2">
        <!-- Icon -->
        <!--div class="w-8 h-8 bg-blue-700 rounded-full flex items-center justify-center">
          <span class="text-lg font-bold">V</span>
        </div-->
        <img src="/fan.png" alt="ton-icon" class="w-10 h-10">
        <!-- Balance Text -->
        <div>
          <p class="text-sm text-gray-300">Balance</p>
          <p class="text-sm font-bold text-slate-200"><%= current_user.tonix %> TONIX</p>
        </div>
      </div>
      <div>
        <%= link_to withdraw_path, class: "py-3 px-4 bg-amber-300/50 rounded-xl flex items-center justify-center", data: { turbo_frame: "modal" } do %>
          <!--span class="text-gray-300 text-xl">ðŸ”’</span-->
          <i class="text-lg fa-solid fa-wallet text-slate-200"></i>
        <% end %>
      </div>
    </div>

  </div>

  <!-- Action Buttons -->
  <div class="w-full px-4">
    <%= link_to boost_path, class: "w-full flex items-center justify-center bg-amber-400 text-black font-semibold py-3 rounded-2xl space-x-2", data: { turbo_frame: "modal" } do %>
      <i class="fa-solid fa-circle-up text-xl"></i>
      <span>Boost</span>
    <% end %>
  </div>

  <!-- Transactions -->

  <div class="w-full px-4 py-4">
    <span class="text-white font-bold text-2xl">Transaction History</span>

    <table class="table-auto font-normal text-white/80 w-full mt-2 text-sm">
      <thead>
        <tr>
          <th class="text-start pb-2">Date</th>
          <th class="text-end">Sum</th>
          <th class="text-end">Type</th>
          <th class="text-end">Status</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.transactions.all.each do |tx| %>
          <tr>
            <td><%= time_ago_in_words(tx.created_at) %></td>
            <td class="text-end"><%= tx.amount %></td>
            <td class="text-end"><%= tx.tx_type %></td>
            <td class="text-end">
              <% if tx.status == "success" %>
                <i class="fa-regular fa-circle-check text-green-400 text-base"></i>
              <% else %>
                <i class="fa-solid fa-ban text-red-400 text-base"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
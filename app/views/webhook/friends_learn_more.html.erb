<%= turbo_frame_tag "modal" do %>
  <div 
    class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center z-50" 
    data-controller="modal" 
    data-modal-target="overlay"
    data-action="click->modal#closeBg"
  >
    <!-- Modal Content -->
    <div class="bg-slate-800 rounded-lg p-6 w-96 shadow-lg text-white text-start space-y-3">
      <span class="block font-bold"><%= t("friends_learn_more.title") %></span>
      <p class="text-sm text-white/50">
        <%= t("friends_learn_more.subtitle") %>
      </p>
      <p class="text-sm text-white/50">
        1. <span class="text-white"><%= t("friends_learn_more.reward1.title") %></span> <%= t("friends_learn_more.reward1.content") %>
      </p>
      <p class="text-sm text-white/50">
        2. <span class="text-white"><%= t("friends_learn_more.reward2.title") %></span> <%= t("friends_learn_more.reward2.content") %>
      </p>
      <p class="text-sm text-white/50">
        3. <span class="text-white"><%= t("friends_learn_more.reward3.title") %></span> <%= t("friends_learn_more.reward3.content") %>
      </p>
      <p class="text-sm text-white/50">
        <%= t("friends_learn_more.footer_text") %>
      </p>
      <div class="flex flex-col justify-center space-y-3">
        <button class="px-4 py-2 block bg-black/20 text-white/70 rounded hover:bg-gray-300 font-semibold" data-action="click->modal#close">Back</button>
      </div>
    </div>
  </div>
<% end %>
